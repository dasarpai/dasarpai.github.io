        &lt;a class=&#34;group-hover:text-primary-300 dark:group-hover:text-neutral-700&#34;
            style=&#34;text-decoration-line: none !important;&#34; href=&#34;#%E0%A4%8F%E0%A4%95%E0%A4%A4%E0%A4%AE%E0%A4%A4-%E0%A4%B8%E0%A4%A4%E0%A4%A4%E0%A4%B0&#34; aria-label=&#34;Anchor&#34;&gt;#&lt;/a&gt;
